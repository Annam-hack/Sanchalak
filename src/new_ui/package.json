{
  "name": "sanchalak-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    ".",
    "backend"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "next build",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build:backend && npm run build",
    "start": "next start",
    "start:backend": "cd backend && npm run start",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start\"",
    "lint": "next lint",
    "install:backend": "cd backend && npm install",
    "install:all": "npm install && npm run install:backend"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.4",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "next": "^14.0.4",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/web": "^0.0.99"
  }
}
